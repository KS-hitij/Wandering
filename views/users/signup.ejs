<% layout("/layouts/boilerplate") %>
<body>
    <div class="container">
        <h1 class="text-center"><b>Sign Up</b></h1>
        <div class="row justify-content-center mt-4">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <form action="/user/signup" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" id="username" name="username" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" minlength="8" maxlength="32" id="password" name="password" class="form-control" required>
                    </div>
                    <div class="text-center">
                        <button class="btn add-btn mt-3 w-100">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
