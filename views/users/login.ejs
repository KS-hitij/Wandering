<% layout("/layouts/boilerplate") %>
<body>
    <h1 class="text-center"><b>Log In</b></h1>
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4 mt-4">
            <form action="/user/login" method="post" class="needs-validation" novalidate>
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control" required>     
                    <label for="password" class="form-label mt-3">Password</label>
                    <input type="password" minlength="8" maxlength="32" id="password" name="password" class="form-control " required>
                    <button class="btn add-btn mt-4 text-center  w-100">Log In</button>
            </form>
        </div>
    </div>
</body>