<% layout("/layouts/boilerplate") %>

    <body>
        <h2 style="margin-top: 1.6rem;">Edit Your Listing</h2>
        <form action="/listing/<%= listing._id %>?_method=PUT" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-8">
                    <div class="col-5">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="Listing[title]" value="<%= listing.title %>" class="form-control">
                    </div>
                    <br>
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <input type="text" name="Listing[description]" class="form-control"
                            value="<%= listing.description %>">
                    </div>
                    <br>
                    <div>
                        Original Listing Image <br>
                        <img src="<%= originalImageUrl %>">
                    </div>
                    <br>
                    <div>
                        <label for="image" class="form-label">Image</label>
                        <input type="file" name="Listing[image]" class="form-control"><br>
                    </div>
                    <br>
                    <div class="col-5">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="Listing[price]" class="form-control"
                            value="<%= listing.price %>">
                    </div>
                    <br>
                    <div class="col-5">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="Listing[location]" class="form-control"
                            value="<%= listing.location %>">
                    </div>
                    <br>
                    <div class="col-5">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="Listing[country]" class="form-control"
                            value="<%= listing.country %>">
                    </div>
                </div>
            </div>
            <br>
            <button class="btn edit-btn">Edit</button>
        </form>
    </body>